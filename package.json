{
  "name": "my-aurelia-dive",
  "description": "An Aurelia 2 client application.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "localhost:9000"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@aurelia/dialog": "2.0.0-beta.8",
    "@aurelia/router": "latest",
    "@aurelia/state": "^2.0.0-beta.8",
    "aurelia": "latest",
    "json-server": "^0.17.4"
  },
  "devDependencies": {
    "@aurelia/babel-jest": "latest",
    "@aurelia/testing": "latest",
    "@aurelia/webpack-loader": "latest",
    "@babel/core": "^7.23.6",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.22.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.22.5",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "css-loader": "^6.8.1",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.55.0",
    "eslint-config-google": "^0.14.0",
    "html-webpack-plugin": "^5.5.3",
    "htmlhint": "^1.1.4",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.1",
    "style-loader": "^3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "webpack": "^5.88.1",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "scripts": {
    "lint:js": "eslint src test",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:html": "htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "pretest": "npm run lint",
    "start": "webpack serve",
    "build": "rimraf dist && webpack --env production",
    "analyze": "rimraf dist && webpack --env production --analyze",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "mock-server": "json-server --watch db.json --port 3004",
    "json-server": "node ./src/mock-server/index.js"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.spec.js"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(js|html)$": "@aurelia/babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
